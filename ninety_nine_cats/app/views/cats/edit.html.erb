<h1>New Cat</h1>
<form action= "<%= cats_url %>" method = "post">
    <label>Name 
        <input type="text" name="cat[name]" value="<%= @cat.name%>"f>
    </label>
    <br>
    <label>Birth date 
        <input type="date" name="cat[birth_date]" value="<%= @cat.birth_date %>">
    </label>
    <br>
    <label>Color
        <select name="cat[color]">
            <option default= true>-- Select One --</option>
            <option value= "black">Black</option>
            <option value= "orange">Orange</option>
            <option value= "white">White</option>
        </select>
    </label>
        <br>
    <label>Sex 
        <input type="radio" name="cat[sex]" value="M"> Male
        <input type="radio" name="cat[sex]" value="F"> Female
    </label>
    <br>
    <label>Description 
        <input type="text" name="cat[description]" value="<%= @cat.description %>">
    </label>
    <br>
    <input type="submit">
</form>